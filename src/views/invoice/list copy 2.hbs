<div id="tableContainer" class="div">
    <table id="listdata" class="display nowrap table-bordered table-hover" cellspacing='0' width='100%'>
        <thead>
            <tr>
                <th>ID</th>
                <th>Nro de Factura</th>
                <th>Tipo</th>
                <th>Cliente</th>
                <th>Fecha</th>
                <th>Moneda</th>
                <th>Subtotal</th>
                <th>IVA</th>
                <th>Total</th>
                <th>Estado</th>
                <th>Descripci贸n</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each invoices}}
            <tr>
                <td>{{ invoice_id }}</td>
                <td>{{ invoice_nro }}</td>
                <td>{{ invoice_type }}</td>
                <td>{{ client_id }}</td>
                <td>{{ invoice_date }}</td>
                <td>{{ invoice_currency }}</td>
                <td>{{ subtotal_amount }}</td>
                <td>{{ iva_id }}</td>
                <td>{{ total_amount }}</td>
                <td>{{ invoice_state }}</td>
                <td>{{ invoice_description }}</td>
                <td> <a href="/invoice/edit/{{invoice_id}}"> Modificar </a> </td>
