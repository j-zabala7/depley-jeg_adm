        </thead>
        <tfoot>
            <tr>
                <th>ID</th>
                <th>Trabajo</th>
                <th>Hectareas Facturadas</th>
                <th>Hectareas Totales</th>
                <th>Moneda</th>
                <th>Monto</th>
                <th>Descripci贸n</th>
                <th></th>
                <th></th>
            </tr>
        </tfoot>
    </table>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        const table = $('#listdata').DataTable({
            language: { url: "https://cdn.datatables.net/plug-ins/1.10.19/i18n/Spanish.json" },
            dom: 'Bfrtip',
            buttons: [
                {
                    extend: 'copy',
                    text: 'Copiar',
                    exportOptions: {
                        modifier: {
                            page: 'current'
                        }
                    }
                }
                ,
                {
                    extend: 'csv',
                    text: 'Exportar a CSV',
                    filename: '{{tagExport}}' + '{{date}}',
                    exportOptions: {
                        columns: ':visible'
                    }

                }
                ,
                {
                    extend: 'excel',
                    text: 'Excel',
                    title: '{{tagExport}}',
                    filename: '{{tagExport}}' + '{{date}}',
                    exportOptions: {
                        columns: ':visible'
                    }

                }
                ,
                {
                    extend: 'pdf',
                    text: 'PDF',
                    title: '{{tagExport}}',
                    filename: '{{tagExport}}' + '{{date}}',
                    exportOptions: {
                        columns: ':visible'
                    }
                }
                ,
                {
                    extend: 'print',
                    text: 'Imprimir pagina corriente',
                    messageBottom: '\n Impreso en fecha: {{date}}',
                    //messageTop: '',
                    //  orientation: 'landscape',
                    // pageSize: 'A4',
                    title: '{{tagExport}}',
                    exportOptions: {
                        columns: ':visible',
                        modifier: {
                            page: 'current'
                        }
                    }

                }
                ,
                {
                    extend: 'colvis',
                    text: 'Mostrar/Ocultar Columnas'
                }

            ]
        });

        $('#listdata tbody').on('click', 'tr', function () {
            if ($(this).hasClass('selected')) {
                $(this).removeClass('selected');
                $('#tableContainerInvoiceLine').addClass('hidden');
            }
            else {
                $('#tableContainerInvoiceLine').addClass('hidden');
                table.$('tr.selected').removeClass('selected');
                $(this).addClass('selected');

                var t_invoice_line = $('#invoice_line').DataTable();

                t_invoice_line.row.add([
                    '.1',
                    '.2',
                    '.3',
                    '.4',
                    '.5',
                    '.6',
                    '.7',
                    '.8',
                    '.9'
                ]).draw(false);
                $('#tableContainerInvoiceLine').removeClass('hidden');
            }
            alert(table.row(this).data());
        });

        $('#button').click(function () {
            table.row('.selected').remove().draw(false);
        });
    });


</script>