<div class="container p-4">
    <div class="row">
        <div class="col-md-4  mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/clients/edit/{{client.id}}" method="POST">
                        <div class="form-group">
                            <label for="name">Nombre:</label>
                            <input type="text" readonly value="{{client.name}}" class="form-control" name="name"
                                placeholder="Nombre" autofocus>
                        </div>
                        <div class="form-group">
                            <label for="dni">DNI:</label>
                            <input type="text" readonly value="{{client.dni}}" class="form-control" name="dni"
                                placeholder="DNI">
                        </div>
                        <div class="form-group">
                            <label for="cuitcuil">Cuit/Cuil:</label>
                            <input type="text" readonly value="{{client.cuitcuil}}" class="form-control" name="cuitcuil"
                                placeholder="Cuil/Cuit">
                        </div>
                        <div class="form-group">
                            <label for="addr">Dirección:</label>
                            <input type="text" readonly value="{{client.addr}}" class="form-control" name="addr"
                                placeholder="Dirección">
                        </div>
                        <div class="form-group">
                            <label for="phone">Telefono:</label>
                            <input type="text" readonly value="{{client.phone}}" class="form-control" name="phone"
                                placeholder="Telefono">
                        </div>
                        <div class="form-group">
                            <label for="email">Correo:</label>
                            <input type="email" readonly value="{{client.email}}" class="form-control" name="email"
                                placeholder="Correo Electronico">
                        </div>
                        <div class="form-group">
                            <a href="/clients/edit/{{client.id}}" class="btn btn-success btn-block"> Modificar </a>
                            <a href="/clients/" class="btn btn-success btn-block"> Cancelar </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>