<div class="container p-4">
    <div class="row">
        <div class="col-md-4  mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/clients/edit/{{client.id}}" method="POST">
                        <div class="form-group">
                            <label for="name">Nombre:</label>
                            <input type="text" value="{{client.name}}" class="form-control" name="name" placeholder="Nombre" autofocus>
                        </div>
                        <div class="form-group">
                            <label for="dni">DNI:</label>
                            <input type="text" value="{{client.dni}}" class="form-control" name="dni" placeholder="DNI" autofocus>
                        </div>
                        <div class="form-group">
                            <label for="cuitcuil">Cuit/Cuil:</label>
                            <input type="text" value="{{client.cuitcuil}}" class="form-control" name="cuitcuil" placeholder="Cuil/Cuit" autofocus>
                        </div>
                        <div class="form-group">
                            <label for="addr">Dirección:</label>
                            <input type="text" value="{{client.addr}}" class="form-control" name="addr" placeholder="Dirección" autofocus>
                        </div>
                        <div class="form-group">
                            <label for="phone">Telefono:</label>
                            <input type="text" value="{{client.phone}}" class="form-control" name="phone" placeholder="Telefono" autofocus>
                        </div>
                        <div class="form-group">
                            <label for="email">Correo:</label>
                            <input type="email" value="{{client.email}}" class="form-control" name="email" placeholder="Correo Electronico" autofocus>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>