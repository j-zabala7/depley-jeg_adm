<div class="container p-4">
    <div class="row">
        <div class="col-md-4  mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/lot/edit/{{lot.id}}" method="POST">
                        <div class="form-group">
                            <label for="name">Nombre:</label>
                            <input type="text" class="form-control" id="name" name="name" placeholder="Nombre"
                                value="{{lot.name}}" autofocus>

                        </div>

                        <div class="form-group">
                            <label for="ha">HA:</label>
                            <input type="text" id="ha" name="ha" placeholder="HA" value="{{lot.ha}}">
                        </div>

                        <div class="form-group">
                            <label for="c_id_select">Campo:</label>
                            <select name="cs_id_select" id="cs_id_select" class="form-control form-control-lg">
                                <option value="default"> Seleccione un Campo. </option>
                                {{#each countrysides}}
                                <option value={{ countryside_id }}>{{ countryside_id }} - {{ countryside_name }}
                                </option>
                                {{/each}}
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="location">Descripción:</label>
                            <input type="text" id="description" name="description" placeholder="Descripción"
                                value="{{lot.description}}">
                        </div>


                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                            <a href="/lot/" class="btn btn-success btn-block"> Cancelar </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



<script language="javascript" type="text/javascript">
    function SetSelectedOption() {
        const id = "{{lot.cs_id}}";
        document.getElementById("cs_id_select").value = id;

        //alert("SetSelectedOption is : " + id);


    }
    $(document).ready(SetSelectedOption);
</script>


