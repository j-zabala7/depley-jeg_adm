<div class="container p-4">
    <div class="row">
        <div class="col-md-4  mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/countryside/add" method="POST">
                        <div class="form-group">
                            <label for="name">Nombre:</label>
                            <input type="text" class="form-control" id="name" name="name" placeholder="Nombre"
                                autofocus>
                        </div>
                        <div class="form-group">
                            <label for="location">Localización:</label>
                            <input type="text" class="form-control" id="location" name="location"
                                placeholder="Localización"> {{!--min="2018-03" value="2018-05"--}}
                        </div>

                        <div class="form-group">
                            <label for="ha">HA:</label>
                            <input type="text" class="form-control" id="ha" name="ha" placeholder="HA">
                        </div>

                        <div class="form-group">
                            <label for="c_id">Cliente:</label>
                            <select name="c_id" id="c_id" class="form-control form-control-lg">
                                <option value="default"> Seleccione un Cliente. </option>
                                {{#each clients}}
                                <option value={{client_id}}>{{ client_id }} - {{client_name}} </option>
                                {{/each}}
                            </select>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>